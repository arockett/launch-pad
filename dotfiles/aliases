
# Utilities
alias ll='ls -l'
alias la='ls -a'
alias lal='ls -al'
alias rm='rm -I'
alias df='df -h'
alias tree='tree -aC -I ".git|node_modules" --dirsfirst "$@" | less -FRNX'

# git aliases
alias gl='git log --graph --decorate --all'
alias gist="git log --graph --decorate --all --pretty=format:'%Cred%h%Creset %C(auto)%d%Creset  %Cgreen(%cd)  %C(bold blue)<%an>%Creset%n%s%n' --abbrev-commit --date=format:'%Y %b %d'"

